# ============================================
# SlothLabs Contracts - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============ DEPLOYER WALLET ============
# Private key of deploying wallet (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# ============ RPC ENDPOINTS ============
# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ============ BLOCK EXPLORER API KEYS ============
# For contract verification
SNOWTRACE_API_KEY=your_snowtrace_api_key
BASESCAN_API_KEY=your_basescan_api_key

# ============ CONTRACT ADDRESSES (filled after deployment) ============
# Avalanche Mainnet
AVALANCHE_CROWDFUNDING=
AVALANCHE_PRICE_ORACLE=
AVALANCHE_DREAM_NFT=
AVALANCHE_STAKING=
AVALANCHE_ZDREAMS=

# Avalanche Fuji Testnet
AVALANCHE_FUJI_STAKING=
AVALANCHE_FUJI_ZDREAMS=

# Base Mainnet
BASE_CROWDFUNDING=
BASE_PRICE_ORACLE=
BASE_DREAM_NFT=
BASE_STAKING=
BASE_ZDREAMS=

# Base Sepolia Testnet
BASE_SEPOLIA_STAKING=
BASE_SEPOLIA_ZDREAMS=

# ============ STAKING CONFIGURATION ============
# Treasury wallet for staking penalties and fees
TREASURY_ADDRESS=

# DREAMS token addresses (required for mainnet deployment)
DREAMS_AVALANCHE=
DREAMS_BASE=0x3dff7cd922aa9d4c3da48cc4c3925cd5d1bfce06

# ============ GAS REPORTER ============
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_cmc_api_key
